<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ipcamera.demotest.activity.ImageRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定提取并注册这张图片中的人脸吗？"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/selected_image"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_width="360dp"
        android:layout_height="240dp" />
    <TextView
        android:id="@+id/sure_image_reg_button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/background_settings_item"
        android:text="开始处理图片"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/choose_other_image"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/background_settings_item"
        android:text="重新选择一张图片？"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#686EF3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_reg_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#686EF3"/>
            <TextView
                android:id="@+id/notice"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
    </LinearLayout>

</ScrollView>