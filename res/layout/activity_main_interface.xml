<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ipcamera.demotest.activity.MainInterfaceActivity"
    android:id="@+id/addcamera"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#E6EFF3F4"
    android:orientation="vertical" >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/begin_working"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="开始运行"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="@string/see_mode"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp" >

            <Button
                android:id="@+id/face_detect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="人脸识别"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp" >

            <Button
                android:id="@+id/tts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="TTS"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/face_manage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="人脸管理"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="设置"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title_size"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/play_video"
        android:onClick="play_video"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/play_video1"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>




    <TextView
        android:onClick="blank_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/connect_camera_fragment"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/background_white_corner"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_top_linear"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/login_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/login_stuta_camer"
                    android:textColor="#9682ED" />

                <ProgressBar
                    android:id="@+id/main_model_progressBar1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/camera_id"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_title_size" />

                <EditText
                    android:id="@+id/editDID"
                    android:text="VB0021898FMIE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:maxLength="64"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@color/color_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/camera_user"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_title_size" />

                <EditText
                    android:id="@+id/editUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/color_black"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="admin" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@color/color_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/camera_pwd"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_title_size" />

                <EditText
                    android:id="@+id/editPwd"
                    android:text="123456Cz"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/color_black"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@color/color_grey" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@color/color_grey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/connect_camera"
                    android:onClick="connect_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/connect"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/connect"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="@string/connect"
                    android:textSize="@dimen/text_title_size" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/launch_web_camera"
            android:onClick="launch_web_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/launch"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/face_library"
            android:onClick="face_library"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/launch_web_camera"
            android:src="@drawable/face_library"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/settings_button"
            android:onClick="settings_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/launch_web_camera"
            android:src="@drawable/settings"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"/>

    </RelativeLayout>



</LinearLayout>