<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_face_data_card"
    android:gravity="center_vertical"
    android:id="@+id/layout_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/face_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/modify" />

        <ImageView
            android:id="@+id/delete_face_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"

            android:layout_below="@+id/face_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/delete" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/face_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="姓名: "
                android:textColor="@color/face_data_card_text1"
                android:textSize="@dimen/face_data_card_text" />

            <TextView
                android:id="@+id/face_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:layout_gravity="center"
                android:textSize="@dimen/face_data_card_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/face_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关系: "
                android:textColor="@color/face_data_card_text1"
                android:textSize="@dimen/face_data_card_text" />

            <TextView
                android:id="@+id/face_relationship_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:layout_gravity="center"
                android:textSize="@dimen/face_data_card_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fr_priority_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="识别优先级: "
                android:textColor="@color/face_data_card_text1"
                android:textSize="@dimen/face_data_card_text" />

            <TextView
                android:id="@+id/fr_priority_level_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:layout_gravity="center"
                android:textSize="@dimen/face_data_card_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/face_reg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="注册时间: "
                android:textColor="@color/face_data_card_text1"
                android:textSize="@dimen/face_data_card_text" />

            <TextView
                android:id="@+id/face_reg_time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:layout_gravity="center"
                android:textSize="@dimen/face_data_card_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/face_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="人脸编号: "
                android:textColor="@color/face_data_card_text1"
                android:textSize="@dimen/face_data_card_text" />

            <TextView
                android:id="@+id/face_number_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="哈哈哈"
                android:textSize="@dimen/face_data_card_content" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:text="查看高级属性"
            android:layout_marginEnd="10dp"
            android:textColor="@color/face_data_card_text2"
            android:textSize="@dimen/face_data_card_text1" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"/>

        <ImageView
            android:id="@+id/modify_face_info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/modify" />
    </LinearLayout>

</LinearLayout>